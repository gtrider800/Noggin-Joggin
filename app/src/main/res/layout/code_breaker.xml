        <Button

                android:id="@+id/button7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:backgroundTint="@color/hint_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="270dp"
                android:background="#FBFBFB" android:layout_marginStart="18dp"/>

        <Button

                android:id="@+id/button8"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:backgroundTint="@color/hint_button"
                android:background="#FBFBFB" app:layout_constraintStart_toEndOf="@+id/button6"
                app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="270dp"
                android:layout_marginStart="15dp"/>

        <Button

                android:id="@+id/button9"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:backgroundTint="@color/hint_button"
                app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="270dp"
                android:background="#FBFBFB" app:layout_constraintStart_toEndOf="@+id/button3"
                android:layout_marginStart="15dp"/>

        <Button

                android:id="@+id/button10"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:backgroundTint="@color/hint_button"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                android:background="#FBFBFB" app:layout_constraintStart_toEndOf="@+id/button4"
                android:layout_marginTop="270dp" android:layout_marginStart="15dp"/>

        <Button

                android:id="@+id/button11"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:backgroundTint="@color/hint_button"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                android:background="#FBFBFB"
                app:layout_constraintStart_toEndOf="@+id/button5" android:layout_marginTop="270dp"
                android:layout_marginStart="15dp"/>

        <Button

                android:id="@+id/button12"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:backgroundTint="@color/hint_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                android:background="#FBFBFB" app:layout_constraintHorizontal_bias="0.656"
                app:layout_constraintStart_toEndOf="@+id/button2" android:layout_marginTop="270dp"
