                app:backgroundTint="#FFCD29"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                android:background="#FBFBFB" app:layout_constraintStart_toEndOf="@+id/button4"
                android:layout_marginTop="380dp" android:layout_marginStart="15dp"/>

        <Button

                android:id="@+id/button16"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:backgroundTint="#14AE5C"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                android:background="#FBFBFB"
                app:layout_constraintStart_toEndOf="@+id/button5" android:layout_marginTop="380dp"
                android:layout_marginStart="15dp"/>

        <Button

                android:id="@+id/button17"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:backgroundTint="#0D99FF"
                android:background="#FBFBFB" app:layout_constraintStart_toEndOf="@+id/button6"
                app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="440dp"
                android:layout_marginStart="15dp"/>

        <Button

                android:id="@+id/button18"
                android:layout_width="50dp"
